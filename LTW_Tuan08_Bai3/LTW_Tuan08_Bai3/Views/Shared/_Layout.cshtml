<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <style>
        body {
            background-color: #f8f9fa;
        }

        .navbar {
            margin-bottom: 20px;
        }

        .sidebar {
            background-color: #f1f1f1;
            padding: 15px;
            height: 100vh;
            border-right: 1px solid #ddd;
            width: 220px; 
            position: fixed;
            top: 56px;
            left: 0;
            overflow-y: auto;
        }

            .sidebar h4 {
                text-align: center;
                margin-bottom: 15px;
            }

            .sidebar ul {
                list-style: none;
                padding-left: 0;
            }

                .sidebar ul li {
                    margin: 8px 0;
                }

                    .sidebar ul li a {
                        text-decoration: none;
                        display: block;
                        padding: 6px 10px;
                        border-radius: 5px;
                        color: #333;
                    }

                        .sidebar ul li a:hover {
                            background-color: #007bff;
                            color: white;
                        }

        .active-dept {
            background-color: #007bff;
            color: white;
        }

        .content {
            margin-left: 240px; 
            padding: 20px;
        }

        .table th, .table td {
            text-align: center;
            vertical-align: middle;
        }

        footer {
            text-align: center;
            margin-top: 40px;
            color: gray;
            font-size: 14px;
        }
    </style>
</head>
<body>
    <nav class="navbar navbar-expand-sm bg-info navbar-dark fixed-top">
        <a class="navbar-brand" href="#">Quản lý Nhân sự</a>
        <ul class="navbar-nav">
            <li class="nav-item"><a class="nav-link" href="/">TRANG CHỦ</a></li>
            <li class="nav-item"><a class="nav-link" href="/Employee/Index">QUẢN LÝ NHÂN VIÊN</a></li>
        </ul>
    </nav>
    <div class="sidebar">
        <h4>Phòng ban</h4>
        <ul>
            <li>
                <a href="@Url.Action("Index", "Employee")" class="@(ViewBag.SelectedDeptId == null ? "active-dept" : "")">Tất cả nhân viên</a>
            </li>
            @if (ViewBag.Departments != null)
            {
                foreach (var dept in ViewBag.Departments)
                {
                    <li>
                        <a href="@Url.Action("Index", "Employee", new { deptId = dept.DeptId })"
                           class="@(ViewBag.SelectedDeptId == dept.DeptId ? "active-dept" : "")">
                            @dept.Name
                        </a>
                    </li>
                }
            }
        </ul>
    </div>
    <div class="content">
        @RenderBody()
        <footer>
            <hr />
            <p>© 2025 - Quản lý Nhân sự HUIT</p>
        </footer>
    </div>
    @Scripts.Render("~/bundles/jquery")
</body>
</html>
