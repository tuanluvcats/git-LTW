@model LTW_Tuan05_Bai2.ViewModels.DuLieuViewModel
@{
    ViewBag.Title = "SanPhamTheoLoai";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-md-3">
        <h3>Danh mục sản phẩm</h3>
        <ul class="list-group">
            @foreach (var loai in Model.DSLoai)
            {
                <li class="list-group-item @(Model.ChonLoai != null && Model.ChonLoai.MaLoai == loai.MaLoai ? "active" : "")">
                    @Html.ActionLink(loai.TenLoai, "SanPhamTheoLoai", new { id = loai.MaLoai })
                </li>
            }
        </ul>
    </div>

    <div class="col-md-9">
        @if (Model.DSSanPham.Any())
        {
            <table class="table table-striped border">
                <thead class="thead-dark">
                    <tr>
                        <th>Mã sản phẩm</th>
                        <th>Tên sản phẩm</th>
                        <th>Hình ảnh</th>
                        <th>Giá</th>
                        <th>Mô tả</th>
                    </tr>
                </thead>
                @foreach (var sp in Model.DSSanPham)
                {
                    <tr>
                        <td>@sp.MaSP</td>
                        <td>@sp.TenSP</td>
                        <td><img src="@Url.Content(sp.DuongDan)" width="100" height="100" /></td>
                        <td>@sp.Gia.ToString("N0") VNĐ</td>
                        <td>@sp.MoTa</td>
                    </tr>
                }
            </table>
        }
        else
        {
            <p class="text-muted">Chưa có sản phẩm để hiển thị.</p>
        }
    </div>
</div>
