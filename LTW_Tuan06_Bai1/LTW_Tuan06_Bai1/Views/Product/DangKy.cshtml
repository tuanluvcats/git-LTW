@{
    ViewBag.Title = "DangKy";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<main>
    <div class="container">
        <div class="form-container">
            <h2 class="form-title">Đăng Ký Tài Khoản</h2>

            @if (ViewBag.ThongBao != null)
            {
                <div class="alert alert-info">@ViewBag.ThongBao</div>
            }

            <form method="post" action="@Url.Action("DangKy", "Product")">
                <div class="form-group">
                    <label for="tenKH">Họ và tên</label>
                    <input type="text" id="tenKH" name="tenKH" required />
                </div>
                <div class="form-group">
                    <label for="soDT">Số điện thoại</label>
                    <input type="tel" id="soDT" name="soDT" required />
                </div>
                <div class="form-group">
                    <label for="matKhau">Mật khẩu</label>
                    <input type="password" id="matKhau" name="matKhau" required />
                </div>
                <div class="form-group">
                    <label for="nhapLaiMK">Nhập lại mật khẩu</label>
                    <input type="password" id="nhapLaiMK" name="nhapLaiMK" required />
                </div>
                <button type="submit" class="form-button">Đăng Ký</button>
            </form>

            <div class="form-footer">
                <p>Đã có tài khoản? <a href="@Url.Action("DangNhap", "Product")">Đăng nhập ngay</a></p>
            </div>
        </div>
    </div>
</main>

